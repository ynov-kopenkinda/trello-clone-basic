// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Column {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  priority    Int
  state       String
  column      String // sqlite does not support enums, can't be bothered to setup mysql ';)
}
